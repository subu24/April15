		/// 5. Stream from Array, sort, filter and print
		String[] names = {"Al", "Ankit", "Kushal", "Brent", "Sarika", "amanda", "Hans", "Shivika", "Sarah"};
		
		Arrays.stream(names)
		.filter(x->x.startsWith("A"))
		.sorted()
		.forEach(System.out:: println);
		
